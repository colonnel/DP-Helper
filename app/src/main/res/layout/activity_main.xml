<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gmail.berezin.serg.dphelper.MainActivity">

    <EditText
        android:id="@+id/high"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/input_high"
        android:inputType="number" />

    <TextView
        android:id="@+id/error_high"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/high"
        android:textColor="@color/colorRed" />

    <EditText
        android:id="@+id/width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_high"
        android:layout_marginTop="20dp"
        android:hint="@string/input_width"
        android:inputType="number" />

    <TextView
        android:id="@+id/error_width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/width"
        android:textColor="@color/colorRed" />

    <EditText
        android:id="@+id/inches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_width"
        android:layout_marginTop="20dp"
        android:hint="@string/input_inches"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/error_inches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inches"
        android:textColor="@color/colorRed" />

    <TextView
        android:id="@+id/dpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_inches"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/big_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dpi"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/big_text" />

    <Button
        android:id="@+id/calc_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="@string/calculate"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/big_text"
        android:textStyle="bold" />

</RelativeLayout>
